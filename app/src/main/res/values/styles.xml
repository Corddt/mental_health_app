<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom CalendarView style -->
    <style name="PastelCalendarView">
        <item name="android:weekDayTextAppearance">@style/CalendarWeekTextStyle</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextStyle</item>
        <!-- 添加其他需要自定义的项目 -->
    </style>

    <!-- Week text style -->
    <style name="CalendarWeekTextStyle">
        <item name="android:textColor">#AABBCC</item> <!-- Pastel text color -->
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Date text style -->
    <style name="CalendarDateTextStyle">
        <item name="android:textColor">#8899AA</item> <!-- Pastel text color -->
        <item name="android:textSize">16sp</item>
    </style>
</resources>
