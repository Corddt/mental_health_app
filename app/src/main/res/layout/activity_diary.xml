<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/diary_background"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextDiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write down your diary..."
        android:inputType="textMultiLine"
        android:fontFamily="@font/montserrat_regular"
        android:padding="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSaveDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save the diary."
        android:background="@drawable/list_item_background"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/listViewDiaries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnToCryingGirl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me!"
        android:background="@drawable/list_item_background"
        android:layout_gravity="center"/>

</LinearLayout>
